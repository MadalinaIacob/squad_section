<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="player"
            type="com.uefa.android.test.model.PlayerUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark">


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/material_small"
            android:scaleType="centerInside"
            android:src="@drawable/avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playerNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/material_small"
            android:paddingTop="@dimen/material_small"
            android:paddingEnd="@dimen/material_small"
            android:text="@{player.playerName}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/countryLabel"
            app:layout_constraintEnd_toStartOf="@+id/playerNumberLabel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Player Name" />

        <TextView
            android:id="@+id/countryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:paddingLeft="@dimen/material_small"
            android:paddingBottom="@dimen/material_medium"
            android:text="@{player.playerCountry}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/dividerLine"
            app:layout_constraintEnd_toStartOf="@+id/playerNumberLabel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toBottomOf="@+id/playerNameLabel"
            tools:text="Country" />

        <TextView
            android:id="@+id/playerNumberLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/material_small"
            android:text="@{String.valueOf(player.playerNumber)}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/dividerLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="24" />

        <View
            android:id="@+id/dividerLine"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="@dimen/material_medium"
            android:layout_marginRight="@dimen/material_medium"
            android:alpha="0.2"
            android:background="?attr/primaryTextColor"
            android:visibility="@{player.lastItem ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/dividerSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_small"
            android:background="?attr/customBackground"
            android:visibility="@{player.lastItem ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
